@model IEnumerable<ShopThoiTrang.Models.OrderUser>

@{
    ViewBag.Title = "Danh sách đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card admin__scroll">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-danger">Danh sách đơn hàng</strong>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th style="width:20px;" class="text-center">#</th>
                    <th style="width:250px">Họ và tên</th>
                    <th style="width:400px">Họ và tên</th>
                    <th style="width:120px">Sđt</th>
                    <th style="width:300px">Email</th>
                    <th>Note</th>
                    <th style="width:100px;" class="text-center">Chức năng</th>
                    <th style="width:20px;" class="text-center">ID</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var info in Model)
                {
                    <tr>
                        <td class="text-center">
                            <input name="checkId" type="checkbox" />
                        </td>
                        <td>@info.Name</td>
                        <td>@info.Addr</td>
                        <td>@info.Phone</td>
                        <td>@info.Email</td>
                        <td>@info.Note</td>
                        <td class="text-center">
                            <a href="@Url.Action("Details","Order",new {@id = info.Id})" class="btn btn-sm btn-warning"><i class="fa-solid fa-eye"></i></a>
                            <a href="@Url.Action("Delete","Order",new {@id = info.Id})" class="btn btn-sm btn-danger"><i class="fa-solid fa-trash"></i></a>
                        </td>
                        <td class="text-center">@info.Id</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
