<!DOCTYPE html>
<html>
    <head>
        <title>@Page.Title</title>
        <link rel="icon" type="image/x-icon" href="~/Public/img/favicon.ico" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css">
        <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
        <link href="~/Public/css/LayoutAdmin.css" rel="stylesheet" />
        <script src="~/scripts/bootstrap.bundle.min.js"></script>
        <link href="~/Public/css/all.min.css" rel="stylesheet" />
        @RenderSection("head", required: false)
    </head>
    <body>
        <section class="clearfix header bg-danger">
            <div class="container-fluid">
                <nav class="navbar navbar-expand-lg navbar-dark bg-danger">
                    <div class="container-fluid">
                        <a class="navbar-brand" href="@Url.Action("Index","Dashboard")"><img src="~/Public/img/logo.png" style="width:150px;"></a>
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Sản phẩm
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="@Url.Action("Index","Product")">Danh sách sản phẩm</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Create","Product")">Thêm sản phẩm</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Index","Category")">Danh sách loại sản phẩm</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Create","Category")">Thêm loại sản phẩm</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Bài viết
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="@Url.Action("Index","Post")">Danh sách bài viết</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Create","Post")">Thêm bài viết</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Index","Topic")">Danh sách chủ đề</a></li>
                                        <li><a class="dropdown-item" href="@Url.Action("Create","Topic")">Thêm chủ đề</a></li>
                                    </ul>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        Đơn hàng
                                    </a>
                                    <ul class="dropdown-menu">
                                        <li><a class="dropdown-item" href="@Url.Action("Index","Order")">Quản lý đơn hàng</a></li>
                                    </ul>
                                </li>
                            </ul>
                            <ul class="navbar-nav ml-auto">
                                <li class="nav-item">
                                    <a class="nav-link" href="#">@Session["UserAdmin"].ToString()</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="@Url.Action("Logout","Auth")">Đăng xuất</a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
        </section>
        <section class="clearfix maincontent">
            <div class="container-fluid py-3">
                @RenderBody()
            </div>
        </section>
        <section class="clearfix footer bg-danger">
            <div class="container-fluid text-white text-center py-3">
                Thiết kế bởi: Trần Nhật Quang
            </div>
        </section>


        @RenderSection("footer", required: false)
    </body>
</html>
