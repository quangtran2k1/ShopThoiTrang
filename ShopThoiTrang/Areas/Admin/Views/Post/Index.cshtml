@model IEnumerable<ShopThoiTrang.Models.PostTopic>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section scripts {
    <!-- Bootstrap core JavaScript-->
    <script src="~/Public/admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/Public/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Public/admin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Public/admin/js/sb-admin-2.min.js"></script>
}
<div class="card admin__scroll">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-danger">Danh sách bài viết</strong>
            </div>
            <div class="col-md-6 text-right">
                <a href="@Url.Action("Create","Post")" class="btn btn-sm btn-success"><i class="fas fa-plus"></i> Thêm</a>
                <a href="@Url.Action("Trash","Post")" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> Đã xóa</a>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th style="width:20px;" class="text-center">#</th>
                    <th style="width:100px;" class="text-center">Ảnh</th>
                    <th>Tiêu đề bài viết</th>
                    <th>Chủ đề</th>
                    <th style="width:180px;" class="text-center">Chức năng</th>
                    <th style="width:20px;" class="text-center">ID</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            <input name="checkId" type="checkbox" />
                        </td>
                        <td>
                            <img src="~/Public/img/Post/@item.Img" class="img-fluid" />
                        </td>
                        <td>@item.Title</td>
                        <td>@item.TopicName</td>
                        <td class="text-center">
                            @if (item.Status == 1)
                            {
                                <a href="@Url.Action("Status","Post",new {@id = item.Id})" class="btn btn-sm btn-success"><i class="fas fa-toggle-on"></i></a>
                            }
                            else
                            {
                                <a href="@Url.Action("Status","Post",new {@id = item.Id})" class="btn btn-sm btn-danger"><i class="fas fa-toggle-off"></i></a>
                            }
                            <a href="@Url.Action("Edit","Post",new {@id = item.Id})" class="btn btn-sm btn-info"><i class="fas fa-pen"></i></a>
                            <a href="@Url.Action("Details","Post",new {@id = item.Id})" class="btn btn-sm btn-warning"><i class="fas fa-eye"></i></a>
                            <a href="@Url.Action("DelTrash","Post",new {@id = item.Id})" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>

                        </td>
                        <td class="text-center">@item.Id</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
