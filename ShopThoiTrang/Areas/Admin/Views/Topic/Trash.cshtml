@model IEnumerable<ShopThoiTrang.Models.Topic>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card admin__scroll">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-danger">Loại sản phẩm đã xóa</strong>
            </div>
            <div class="col-md-6 text-end">
                <a href="@Url.Action("Index","Topic")" class="btn btn-sm btn-success"><i class="fa-solid fa-arrow-left"></i> Quay về danh sách</a>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th style="width:20px;" class="text-center">#</th>
                    <th>Tên sản phẩm</th>
                    <th>Liên kết</th>
                    <th style="width:180px;" class="text-center">Chức năng</th>
                    <th style="width:20px;" class="text-center">ID</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">
                            <input name="checkId" type="checkbox" />
                        </td>
                        <td>@item.Name</td>
                        <td>
                            <a href="~/san-pham/@item.Slug">
                                @item.Slug
                            </a>
                        </td>
                        <td class="text-center">
                            <a href="@Url.Action("Restore","Topic",new {@id = item.Id})" class="btn btn-sm btn-info"><i class="fa-solid fa-rotate-left"></i></a>
                            <a href="@Url.Action("Delete","Topic",new {@id = item.Id})" class="btn btn-sm btn-danger"><i class="fa-solid fa-trash"></i></a>

                        </td>
                        <td class="text-center">@item.Id</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
