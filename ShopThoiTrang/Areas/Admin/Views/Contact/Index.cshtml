@model IEnumerable<ShopThoiTrang.Models.Contact>

@{
    ViewBag.Title = "Tin nhắn";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section scripts {
    <!-- Bootstrap core JavaScript-->
    <script src="~/Public/admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/Public/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Public/admin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Public/admin/js/sb-admin-2.min.js"></script>
}
<div class="card admin__scroll">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-danger">Tin nhắn</strong>
            </div>
        </div>
    </div>
    <div class="card-body p-3">
        <div class="list-group">
            @foreach (var item in Model)
            {
                <a href="@Url.Action("Details", "Contact",new {@id = item.Id})" class="list-group-item list-group-item-action">
                    <div class="d-flex w-100 justify-content-between">
                        @if (item.Status == 2) {
                        <h5 class="mb-1 text-truncate font-weight-bold">@item.FullName <small class="font-weight-light" style="font-size:70%">&#60 @item.Email&#62 </small></h5>
                        }else{
                        <h5 class="mb-1 text-truncate font-weight-normal">@item.FullName <small class="font-weight-light" style="font-size:70%">&#60 @item.Email&#62 </small></h5>
                        }
                    </div>
                    <p class="mb-1 text-truncate" style="color: #b3b3b3;">@item.Title</p>
                </a>
            }
        </div>
    </div>
</div>
