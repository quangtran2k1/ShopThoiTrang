@model IEnumerable<ShopThoiTrang.Models.Contact>
@{
    ViewBag.Title = "Chi tiết tin nhắn";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section scripts {
    <!-- Bootstrap core JavaScript-->
    <script src="~/Public/admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/Public/admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Public/admin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Public/admin/js/sb-admin-2.min.js"></script>
}
<div class="card admin__scroll">
    <div class="card-header">
        <div class="row">
            <div class="col-md-6">
                <strong class="text-uppercase text-danger">Chi tiết tin nhắn</strong>
            </div>
            <div class="col-md-6 text-right">
                <a href="@Url.Action("Index", "Contact")" class="btn btn-sm btn-success"><i class="fas fa-arrow-left"></i> Quay về danh sách</a>
                <button type="submit" class="btn btn-sm btn-success"><i class="fas fa-floppy-disk"></i> Lưu</button>
            </div>
        </div>
    </div>
    @foreach (var item in Model)
    {
        <div class="card-body p-3">
            <div class="card">
                <div class="card-header">
                    <h4 class="font-weight-bold">@item.Title</h4>
                </div>
                <div class="card-body">
                    <h5 class="card-title font-weight-normal">@item.FullName&#160 <small style="font-size: 70%;">&#60 @item.Email&#62 </small></h5>
                    <p class="card-text">@item.Content</p>
                </div>
            </div>
        </div>
    }
</div>
