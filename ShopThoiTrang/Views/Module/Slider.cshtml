@{var count = 0; }

@foreach (var item in ViewBag.Slider)
    {
        count++;
    }
@if (count < 3)
{
    <div class="banner__item">
        <div class="banner__text" style="width:45%">
            <span>Sale Off</span>
            <h2>Giảm giá 30% <br />cho đơn hàng đầu tiên</h2>
            <p>Giao hàng toàn quốc</p>
            <a href="@Url.Action("Index", "Sanpham")" class="primary-btn">MUA NGAY</a>
        </div>
    </div>
}
else
{
    <div id="carouselExampleCaptions" class="carousel slide m-2" data-bs-ride="carousel" style="margin-top:60px!important;">
        <div class="carousel-indicators">
            @for (int i = 0; i < count; i++)
            {
                if (i == 0)
                {
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="@i" class="active" aria-current="true" aria-label="Slide @(i+1)"></button>
                }
                else
                {
                    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="@i" aria-label="Slide @(i+1)"></button>
                }
            }

        </div>
        <div class="carousel-inner" style="height: 431px; display:flex; align-items:center">
            @{ var check = true; }
            @foreach (var item in ViewBag.Slider)
            {
                if (check == true)
                {
                    <div class="carousel-item active">
                        <img src="~/Public/img/Slider/@item.Img" class="d-block w-100" alt="@item.Name">
                    </div>
                    check = false;
                }
                else
                {
                    <div class="carousel-item">
                        <img src="~/Public/img/Slider/@item.Img" class="d-block w-100" alt="@item.Name">
                    </div>
                }
            }
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
}

