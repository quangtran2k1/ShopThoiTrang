<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <div class="header__logo">
                <a href="@Url.Action("Index", "Trangchu")"><img src="~/Public/img/logo.png" /></a>
            </div>
        </div>
        <div class="col-lg-7">
            <nav class="header__menu">
                <ul>
                    <li class="active"><a href="@Url.Action("Index", "Trangchu")">Trang chủ</a></li>
                    <li>
                        <a href="@Url.Action("Index", "Sanpham")">Cửa hàng</a>
                        <ul class="header__menu__dropdown">
                            <li><a href="@Url.Action("Index", "Trangchu")#sale-off">Sale Off</a></li>
                            <li><a href="@Url.Action("Index", "Trangchu")#featured">Nổi bật</a></li>
                            <li><a href="@Url.Action("Index", "Sanpham")">Sản phẩm</a></li>
                        </ul>
                    </li>
                    <li><a href="@Url.Action("Index","Blog")">Blog</a></li>
                    <li><a href="@Url.Action("Index", "GioiThieu")">Giới thiệu</a></li>
                    <li><a href="@Url.Action("Index", "LienHe")">Liên hệ</a></li>
                </ul>
            </nav>
        </div>
        <div class="col-lg-2">
            <div class="header__cart">
                <ul>
                    <li><a href="#"><i class="fa-solid fa-heart"></i></a></li>
                    <li>
                        <a href="@Url.Action("Index", "Giohang")"><i class="fa-solid fa-cart-shopping"></i>
                        @{ 
                            int soluong = 0;
                            if (!System.Web.HttpContext.Current.Session["MyCart"].Equals(""))
                            {
                                List<CartItem> listcart = (List<CartItem>)System.Web.HttpContext.Current.Session["MyCart"];
                                soluong = listcart.Count;
                            }
                        }
                        <span>@soluong</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>