@model IEnumerable<ShopThoiTrang.Models.Product>
@{
    ViewBag.Title = "Sản phẩm";
    Layout = "~/Views/Shared/_LayoutSite.cshtml";
}

<section class="featured spad">
    <div class="container">
        <hr id="featured" />
        @using (Html.BeginForm("Search", "Trangchu"))
        {
            <div class="search__other">
                <input type="text" name="key" required placeholder="Tìm kiếm . . .">
                <button type="submit"><span class="fa-solid fa-search"></span></button>
            </div>
        }
        <div class="row">
            <div class="col-lg-12">
                <h3 class="text__featured">SẢN PHẨM</h3>
            </div>
        </div>
        <div class="row featured__filter">
            @foreach (var pro in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6">
                    <div class="featured__item">
                        <div class="featured__item__pic">
                            <img src="~/Public/img/Product/@pro.Img" />
                            <ul class="featured__item__pic__hover">
                                <li><a href="#"><i class="fa-solid fa-heart"></i></a></li>
                                <li><a href="#"><i class="fa-solid fa-retweet"></i></a></li>
                                <li><a href="@Url.Action("Add","Giohang",new {@id = pro.Id})"><i class="fa-solid fa-shopping-cart"></i></a></li>
                            </ul>
                        </div>
                        <div class="featured__item__text">
                            <h6><a href="@Url.Action("ProductDetail","Sanpham",new {@slug = pro.Slug})">@pro.Name</a></h6>
                            <h5>@pro.Price &#8363</h5>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

